<?xml version="1.0"?>

<config>
    <modules>
        <Apptha_DealProduct>
            <version>0.1.0</version>
        </Apptha_DealProduct>
    </modules>
    
    <global>
        <models>
            <dealproduct>
				<class>Apptha_DealProduct_Model</class>		
            </dealproduct>
        </models>    
        
        <resources>
            <dealproduct_setup>
                <setup>
                    <module>Apptha_DealProduct</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </dealproduct_setup>
		</resources>        
        
        <catalog>
            <product>
                <type>
                    <dealproduct translate="label" module="catalog">
                        <label>Deal Product</label>
                        <model>dealproduct/product_type_cp</model>
                        <is_qty>1</is_qty>
                        <index_data_retreiver>dealproduct/catalogIndex_data_cp</index_data_retreiver>
                        <price_model>dealproduct/product_price</price_model>
                        <composite>0</composite>
                    </dealproduct>
                </type>
			</product>        
        </catalog>
	</global>  
	
	<adminhtml>
		<events>
			<catalog_product_new_action>
			    <observers>
			        <dealproduct_observer_catalog_product_new_action>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogProductNewAction</method>
			        </dealproduct_observer_catalog_product_new_action>
			    </observers>
			</catalog_product_new_action>
			<catalog_product_edit_action>
			    <observers>
			        <dealproduct_observer_catalog_product_edit_action>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogProductEditAction</method>
			        </dealproduct_observer_catalog_product_edit_action>
			    </observers>
			</catalog_product_edit_action>			
            <catalog_product_prepare_save>
                <observers>
                	<dealproduct_observer_catalog_product_prepare_save>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogProductPrepareSave</method>
			        </dealproduct_observer_catalog_product_prepare_save>
                </observers>
            </catalog_product_prepare_save>
            <catalog_product_delete_before>
                <observers>
                	<dealproduct_observer_catalog_product_delete_before>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogProductDeleteBefore</method>
			        </dealproduct_observer_catalog_product_delete_before>
                </observers>
            </catalog_product_delete_before>            
            <catalog_product_save_after>
                <observers>
                	<dealproduct_observer_catalog_product_save_after>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogProductSaveAfter</method>
			        </dealproduct_observer_catalog_product_save_after>
                </observers>
            </catalog_product_save_after>
            <catalog_product_status_update>
                <observers>
                	<dealproduct_observer_catalog_product_status_update>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogProductStatusUpdate</method>
			        </dealproduct_observer_catalog_product_status_update>
                </observers>
            </catalog_product_status_update>            
            
            
            
            
            <sales_order_item_save_after>
                <observers>
                	<dealproduct_observer_sales_order_item_save_after>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoSalesOrderItemSaveAfter</method>
			        </dealproduct_observer_sales_order_item_save_after>
                </observers>
            </sales_order_item_save_after>
            <sales_order_save_before>
                <observers>
                	<dealproduct_observer_sales_order_save_before>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoSalesOrderSaveBefore</method>
			        </dealproduct_observer_sales_order_save_before>
                </observers>
            </sales_order_save_before>            
            <sales_order_save_after>
                <observers>
                	<dealproduct_observer_sales_order_save_after>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoSalesOrderSaveAfter</method>
			        </dealproduct_observer_sales_order_save_after>
                </observers>
            </sales_order_save_after>
            <catalogrule_before_apply>
                <observers>
                	<dealproduct_observer_catalogrule_before_apply>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogruleBeforeApply</method>
			        </dealproduct_observer_catalogrule_before_apply>
                </observers>
            </catalogrule_before_apply>
            <catalogrule_after_apply>
                <observers>
                	<dealproduct_observer_catalogrule_after_apply>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogruleAfterApply</method>
			        </dealproduct_observer_catalogrule_after_apply>
                </observers>
            </catalogrule_after_apply>
            <catalog_entity_attribute_save_after>
                <observers>
                	<dealproduct_observer_catalog_entity_attribute_save_after>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogEntityAttributeSaveAfter</method>
			        </dealproduct_observer_catalog_entity_attribute_save_after>
                </observers>
            </catalog_entity_attribute_save_after>
            <catalog_product_delete_after_done>
                <observers>
                	<dealproduct_observer_catalog_product_delete_after_done>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogProductDeleteAfterDone</method>
			        </dealproduct_observer_catalog_product_delete_after_done>
                </observers>
            </catalog_product_delete_after_done>

            <customer_login>
                <observers>
                	<dealproduct_observer_customer_login>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCustomerLogin</method>
			        </dealproduct_observer_customer_login>
                </observers>
            </customer_login>
            <customer_logout>
                <observers>
                	<dealproduct_observer_customer_logout>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCustomerLogout</method>
			        </dealproduct_observer_customer_logout>
                </observers>
            </customer_logout>
            <sales_quote_save_after>
                <observers>
                	<dealproduct_observer_sales_quote_save_after>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoSalesQuoteSaveAfter</method>
			        </dealproduct_observer_sales_quote_save_after>
                </observers>
            </sales_quote_save_after>
            <catalog_product_collection_load_after>
                <observers>
                	<dealproduct_observer_catalog_product_collection_load_after>
			            <type>singleton</type>
			            <class>dealproduct/observer</class>
			            <method>hookIntoCatalogProductCollectionLoadAfter</method>
			        </dealproduct_observer_catalog_product_collection_load_after>
                </observers>
            </catalog_product_collection_load_after>
		</events>
	</adminhtml>
	  
</config>
