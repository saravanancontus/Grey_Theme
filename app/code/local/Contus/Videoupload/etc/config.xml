                <videoupload>
                    <file>videoupload.xml</file>
                </videoupload>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <videoupload>
                <class>Contus_Videoupload_Model</class>
                <resourceModel>videoupload_mysql4</resourceModel>
            </videoupload>
            <videoupload_mysql4>
                <class>Contus_Videoupload_Model_Mysql4</class>
                <entities>
                    <videoupload>
                        <table>videoupload</table>
                    </videoupload>
                </entities>
            </videoupload_mysql4>
        </models>
        <resources>
            <videoupload_setup>
                <setup>
                    <module>Contus_Videoupload</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </videoupload_setup>
            <videoupload_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </videoupload_write>
            <videoupload_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </videoupload_read>
        </resources>
        <blocks>
            <videoupload>
                <class>Contus_Videoupload_Block</class>
            </videoupload>
        </blocks>
        <helpers>
            <videoupload>
                <class>Contus_Videoupload_Helper</class>
            </videoupload>
        </helpers>
    </global>
</config>