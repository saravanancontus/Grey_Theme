<config>
    <modules>
        <Contus_Videoupload>
            <version>0.1.0</version>
        </Contus_Videoupload>
    </modules>
    <frontend>
        <routers>
            <videoupload>
                <use>standard</use>
                <args>
                    <module>Contus_Videoupload</module>
                    <frontName>videoupload</frontName>
                </args>
            </videoupload>
        </routers>
        <layout>
            <updates>
                <videoupload>
                    <file>videoupload.xml</file>
                </videoupload>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <videoupload>
                <use>admin</use>
                <args>
                    <module>Contus_Videoupload</module>
                    <frontName>videoupload</frontName>
                </args>

            </videoupload>
        </routers>
    </admin>
