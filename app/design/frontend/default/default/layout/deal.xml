<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/loopslider.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery-1.4.1.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/jquery.orbit.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/loopedslider.js</name>
            </action>
            <remove name="right.poll"/>
        </reference>
    </default>
    <deal_index_index>
        <reference name="head">
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/styles.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>css/homecontent.css</name>
            </action>
            
            <action method="removeItem">
                    <type>js</type>
                    <name>lib/ds-sleight.js</name>
                    <params/>
                    <if>lt IE 7</if>
                </action>
                <action method="removeItem">
                    <type>js</type>
                    <name>varien/iehover-fix.js</name>
                    <params/>
                    <if>lt IE 7</if>
                </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="deal/deal" name="deal" template="deal/deal.phtml" />
        </reference>
        <reference name="right">
            <block type="deal/sidedeal_view" name="right.sidedeal" template="deal/sidedeal/view.phtml" />
        </reference>
    </deal_index_index>
    <deal_index_active>
        <reference name="head">
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/homecontent.css</name>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
        </reference>
       
        <remove name="left"/>
        <reference name="content">
            <block type="deal/active" name="ajax" template="deal/active.phtml" />
        </reference>
        <reference name="right">
            <block type="deal/sidedeal_view" name="right.sidedeal" template="deal/sidedeal/view.phtml" />
        </reference>
    </deal_index_active>
    <deal_index_recent>
        <reference name="head">
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/homecontent.css</name>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
        </reference>
        <remove name="left"/>
        <reference name="content">
            <block type="deal/recent" name="recentpage" template="deal/recent.phtml" />
        </reference>
        <reference name="right">
            <block type="deal/sidedeal_view" name="right.sidedeal" template="deal/sidedeal/view.phtml" />
        </reference>
    </deal_index_recent>
    <deal_index_upcoming>
        <reference name="head">
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/homecontent.css</name>
            </action>
        </reference>
        <reference name="root">
            <action method="setTemplate">
                <template>page/2columns-right.phtml</template>
            </action>
        </reference>
        <remove name="left"/>
        <reference name="content">
            <block type="deal/upcoming" name="upcomingpage" template="deal/upcoming.phtml" />
        </reference>
        <reference name="right">
            <block type="deal/sidedeal_view" name="right.sidedeal" template="deal/sidedeal/view.phtml" />
        </reference>
    </deal_index_upcoming>
    <customer_account_login>
        <reference name="right">
            <block type="deal/sidedeal_view" name="right.sidedeal" template="deal/sidedeal/view.phtml" />
        </reference>
    </customer_account_login>
    <customer_account_logoutsuccess>
        <reference name="right">
            <block type="deal/sidedeal_view" name="right.sidedeal" template="deal/sidedeal/view.phtml" />
        </reference>
    </customer_account_logoutsuccess>
    <checkout_cart_index>
        <reference name="head">
            <action method="removeItem">
                <type>skin_css</type>
                <name>css/loopslider.css</name>
            </action>
            <action method="removeItem">
                <type>skin_js</type>
                <name>js/jquery-1.4.1.min.js</name>
            </action>
            <action method="removeItem">
                <type>skin_js</type>
                <name>js/loopedslider.js</name>
            </action>
        </reference>
    </checkout_cart_index>
    <cms_page>
        <reference name="right">
            <block type="deal/sidedeal_view" name="right.sidedeal" template="deal/sidedeal/view.phtml" />
        </reference>
    </cms_page>
    <merchant_index_index>
         <reference name="right">
            <block type="deal/sidedeal_view" name="right.sidedeal" template="deal/sidedeal/view.phtml" />
        </reference>
    </merchant_index_index>
    
</layout> 